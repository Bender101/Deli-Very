<script defer src="/js/product.js"></script>
<div class="p-title-flex">
  <div class="p-title">{{product.title}}</div>
</div>
<div class="product-info">
  <img class="product-image"
    src="{{product.img}}">
  <div class="p-info">Адрес: {{product.location}}</div>
  <div class="p-info">Изначальная цена: {{product.price}} руб.</div>
  <div class="p-info">Скидка: {{product.discount}}%</div>
  <div class="p-info">Цена со скидкой: {{discountedPrice}} руб.</div>
  <div class="p-info">Размещено: {{date}}</div>
  <div class="p-info">Курьер: {{product.User.name}}</div>
  <div class="p-buttons">
  {{#if client}}
  <input id="address" placeholder="Адрес доставки" type="text" value="Москва">
  <a id="buy" href="/user/client" class="btn btn-primary"><button id="buyProductButton" data-entryid="{{product.id}}"
      value="buy" class="btn">Купить</button></a>
  {{/if}}
  {{#if isAuthor}}
  <a id="del" href="/user/courier" data-entryid="{{product.id}}"><button id="deleteProductButton" data-entryid="{{product.id}}"
      value="delete" class="btn">Удалить</button></a>
  {{/if}}
  </div>
  <div class="product-back">
    <!-- <script type="module">
          import { Loader } from 'https://cdn.pika.dev/google-maps';
          // todo: see docs bellow
      </script> -->

  </div>
</div>
<div id="map" sclass="map"></div>
